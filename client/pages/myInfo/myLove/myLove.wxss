/* client/pages/myInfo/myLove/myLove.wxss */
page{
    height: 100%
}
.loveCon{
    background-color: rgb(247, 219, 215);
    border-top: 1px solid transparent;
    min-height: 100%;
    box-sizing: border-box
}
.sayLove{
    margin: 20rpx 20rpx;
    background-color: white;
    border-radius: 8rpx;
    padding: 20rpx;
    color: rgb(144, 143, 141)
}
.loveTop{
    display: flex;
    border-bottom: 2rpx solid rgb(237, 230, 237);
    padding-bottom: 20rpx;
}
.loveTop image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}
.loveTop .sender{
    flex-grow: 1;
    margin-left: 20rpx;
    font-size: 28rpx

}
.loveTop .sender view:nth-child(1){
    display: flex;
    justify-content: space-between
}
.loveBody{
    color: black;
    border-bottom: 2rpx solid rgb(237, 230, 237);
    padding: 30rpx 0;
}
.loveBottom{
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 36rpx;
    padding-top: 20rpx;
}
.loveBottom .iconfont{
    margin-right: 16rpx
}
.loveBottom .iconfont::before{
    font-size: 32rpx
}